{{> navigation}}
<div id="collection">
    <div class="inner">
        <div class="collection__breadcrumb">
            <a href="/">
                <span>
                    <i class="fa-solid fa-house"></i>
                    Trang chủ
                </span>
            </a>
            <span style="color: #333; text-transform:capitalize">/ {{products.[0].genre}}s</span>
        </div>
    
        <div class="collection__container">
            <div class="collection__banner">
                <img src="/assets/images/collection_banner.png" alt="Collection banner">
            </div>
    
            <div class="collection__filter-section">
                <div class="btn collection__filter-item">
                    <i class="fa-solid fa-filter"></i>
                    <span>Bộ lọc</span>
                    <span class="collection__filter-quantity"></span>
                </div>
                <div class="btn collection__filter-item">
                    <span>Hãng</span>
                    <i class="fa-solid fa-angle-down"></i>
                </div>
                <div class="btn collection__filter-item">
                    <span>Giá</span>
                    <i class="fa-solid fa-angle-down"></i>
                </div>
                <div class="btn collection__filter-item">
                    <span>Nhu cầu sử dụng</span>
                    <i class="fa-solid fa-angle-down"></i>
                </div>
            </div>
            <div class="collection__sort">
                <div class="collection__sort-item">               
                    <span>
                         <i class="fa-solid fa-arrow-down-short-wide"></i>
                        Xếp theo:
                    </span>
                    <span class="collection__sort-condition" data-type={{type}}>
                    </span>
                    <i class="fa-solid fa-angle-down"></i>
                    <ul class="collection__sort-box">
                        <li class="active" data-type="asc"><a href="/pages/collection/{{products.[0].genre}}?_sort=true&type=asc">Giá tăng dần</a></li>
                        <li data-type="desc"><a href="/pages/collection/{{products.[0].genre}}?_sort=true&type=desc">Giá giảm dần</a></li>
                    </ul>
                </div>            
            </div>
    
            <div class="collection__product-wrapper">
